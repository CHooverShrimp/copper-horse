---
import "@styles/global.css";
import type { SEO } from '@data/SEO';
import Seo from '@components/SEO.astro';

interface Props {
  title?: string;
  backgroundClass?: string; // Optional class for various backgrounds
  seo?: SEO;
}

const { title = "Metalcast Mares - Copper Horse", seo }: Props = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<Seo seo={seo} />
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />

		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Reddit+Sans:ital,wght@0,200..900;1,200..900&family=Rubik+Mono+One&display=swap" rel="stylesheet">
		<title>{title}</title>
	</head>
	<body class="bg-neutral-900 reddit-sans">
		<div id="header" class="shadow-xl bg-neutral-950 py-10">
			<center class="rubik-mono-one-regular sm:text-6xl text-[9vw] text-white">  COPPER.HORSE </center>
			<center class="text-2xl text-white">  Artisan crafted horse sculptures </center>
			<div id="nav-bar" class="sticky flex justify-center gap-4 py-4">
				<a href="/contact" class="bg-white p-2 rounded hover:scale-105 transition duration-100"> Contact </a>
				<a href="/" class="bg-white p-2 rounded hover:scale-105 transition duration-100"> main </a>
			</div>
		</div>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;

	}

	.rubik-mono-one-regular {
		font-family: "Rubik Mono One", monospace;
		font-weight: 400;
		font-style: normal;
	}


	.reddit-sans {
		font-family: "Reddit Sans", sans-serif;
		font-optical-sizing: auto;
		font-weight: 500;
		font-style: normal;
	}
</style>
